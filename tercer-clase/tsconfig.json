{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "./**/*.ts"  // Busca archivos .ts en el directorio actual y en todos sus subdirectorios.
  ],
  "exclude": [
    "node_modules"
  ]
}
